<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="10dp"
    app:cardElevation="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_app_icon"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:src="@android:drawable/sym_def_app_icon" />

        <TextView
            android:id="@+id/tv_heading_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/comfortaa"
            android:gravity="center"
            android:layout_below="@id/iv_app_icon"
            android:padding="3dp"
            android:text="Quit App?"
            android:textColor="#2B3740"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_sub_title_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_heading_2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/comfortaa"
            android:gravity="center"
            android:text="Do you really want to exit"
            android:textColor="#2B3740"
            android:textSize="14sp" />

        <RelativeLayout
            android:layout_width="200dp"
            android:layout_height="35dp"
            android:layout_below="@id/tv_sub_title_2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="10dp">


            <ImageView
                android:id="@+id/iv_ok_2"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:src="@drawable/ic_ok"
                tools:ignore="ContentDescription"
                android:layout_alignParentRight="true" />

            <ImageView
                android:id="@+id/iv_cancel_2"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentStart="true"
                android:src="@drawable/ic_failure"
                tools:ignore="ContentDescription"
                android:layout_alignParentLeft="true" />

        </RelativeLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>